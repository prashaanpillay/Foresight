{
  "dataset": {
    "name": "fruits 360",
    "format": "jpg",
    "download_url": "https://github.com/Horea94/Fruit-Images-Dataset/archive/master.zip",
    "training_set_input_directory": "\\Fruit-Images-Dataset-master\\Training",
    "validation_set_input_directory": "\\Fruit-Images-Dataset-master\\Test"
  },
  "build": {
    "clear_out_folders_before_run": true,
    "training_set_output_directory": "./assets/training_set/",
    "validation_set_output_directory": "./assets/validation_set/"
  },
  "data_augementation": {
    "shuffle_files": true,
    "supervised": true,
    "rotation_range": 0.1,
    "width_shift_range": 0.1,
    "height_shift_range": 0.1,
    "brightness_range": [0.5, 1.5],
    "channel_shift_range": 0.05,
    "rescale": 0
  }
}
